<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="homeAsUpIndicator">@drawable/ic_chevron_left</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_chevron_left</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="App"  parent="Theme.AppCompat.Light">
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>
    </style>
    <style name="styleView">
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="ActionButtonStyle" parent="Widget.AppCompat.ActionButton">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:width">100dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

</resources>
